{
  "plugins": [
    "lodash"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:lodash/recommended",
    "./.eslintrc-browser.json"
  ],
  "env": {
    "es6": true
  },
  "rules": {
    "indent": [
      "error",
      4,
      {
        "SwitchCase": 1
      }
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "eol-last": [
      "error"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "no-shadow": ["off"],
    "no-console": ["error", { "allow": ["warn"] }],
    "curly": "error"
  }
}
